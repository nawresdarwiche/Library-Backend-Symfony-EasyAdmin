{% block stylesheets %}
{{ parent() }}
<style>
    /* Variables */
    :root {
        --primary-blue: #2563eb;
        --secondary-blue: #3b82f6;
        --light-blue: #60a5fa;
        --dark-blue: #1e40af;
        --gradient-bg: linear-gradient(135deg, #1e3a8a 0%, #2563eb 50%, #3b82f6 100%);
        --gradient-card: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
        --glass-bg: rgba(255, 255, 255, 0.1);
        --glass-border: rgba(255, 255, 255, 0.15);
    }

    /* Reset et base */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        min-height: 100vh;
        background: var(--gradient-bg);
        background-size: 200% 200%;
        animation: gradientMove 10s ease infinite;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    @keyframes gradientMove {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    /* Carte principale */
    .confirmation-card {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 50px 40px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Animation de l'ic√¥ne */
    .success-icon {
        width: 100px;
        height: 100px;
        background: var(--gradient-bg);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        box-shadow: 0 10px 30px rgba(30, 64, 175, 0.3);
        position: relative;
        animation: iconPulse 2s infinite;
    }

    @keyframes iconPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .success-icon::after {
        content: '';
        position: absolute;
        width: 120px;
        height: 120px;
        border: 2px solid rgba(96, 165, 250, 0.3);
        border-radius: 50%;
        animation: ripple 1.5s infinite;
    }

    @keyframes ripple {
        0% {
            transform: scale(0.8);
            opacity: 1;
        }
        100% {
            transform: scale(1.3);
            opacity: 0;
        }
    }

    .success-icon svg {
        width: 50px;
        height: 50px;
        color: white;
    }

    /* Titres */
    .confirmation-title {
        color: white;
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .confirmation-subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: 18px;
        font-weight: 400;
        margin-bottom: 30px;
        line-height: 1.5;
    }

    /* Message */
    .confirmation-message {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 25px;
        margin: 30px 0;
        border-left: 4px solid var(--light-blue);
        text-align: left;
    }

    .message-text {
        color: rgba(255, 255, 255, 0.9);
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 15px;
    }

    .message-text:last-child {
        margin-bottom: 0;
    }

    .highlight-text {
        color: var(--light-blue);
        font-weight: 600;
    }

    /* D√©tails */
    .details-box {
        background: rgba(30, 64, 175, 0.2);
        border-radius: 12px;
        padding: 20px;
        margin: 30px 0;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .details-title {
        color: white;
        font-weight: 600;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        font-size: 16px;
    }

    .details-title svg {
        width: 20px;
        height: 20px;
    }

    .details-list {
        list-style: none;
    }

    .details-item {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 10px;
        font-size: 14px;
        line-height: 1.5;
        position: relative;
        padding-left: 25px;
        text-align: left;
    }

    .details-item:before {
        content: "‚úì";
        color: var(--light-blue);
        font-weight: bold;
        position: absolute;
        left: 0;
    }

    /* Bouton */
    .back-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 16px 35px;
        background: var(--gradient-bg);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 17px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        margin-top: 20px;
        min-width: 220px;
    }

    .back-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(30, 64, 175, 0.4);
    }

    .back-btn:active {
        transform: translateY(-1px);
    }

    .btn-icon {
        width: 22px;
        height: 22px;
        transition: transform 0.3s ease;
    }

    .back-btn:hover .btn-icon {
        transform: translateX(-5px);
    }

    /* Footer */
    .footer-note {
        color: rgba(255, 255, 255, 0.6);
        font-size: 14px;
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .confirmation-card {
            padding: 40px 30px;
            max-width: 95%;
        }

        .confirmation-title {
            font-size: 28px;
        }

        .confirmation-subtitle {
            font-size: 17px;
        }

        .success-icon {
            width: 90px;
            height: 90px;
        }

        .success-icon svg {
            width: 45px;
            height: 45px;
        }
    }

    @media (max-width: 480px) {
        body {
            padding: 15px;
        }

        .confirmation-card {
            padding: 35px 25px;
        }

        .confirmation-title {
            font-size: 26px;
        }

        .confirmation-subtitle {
            font-size: 16px;
        }

        .confirmation-message {
            padding: 20px;
        }

        .back-btn {
            padding: 15px 30px;
            min-width: 200px;
        }
    }
</style>
{% endblock %}

