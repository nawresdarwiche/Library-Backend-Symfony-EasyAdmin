{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Variables */
    :root {
        --primary-blue: #2563eb;
        --secondary-blue: #3b82f6;
        --light-blue: #60a5fa;
        --dark-blue: #1e40af;
        --gradient-bg: linear-gradient(135deg, #1e3a8a 0%, #2563eb 50%, #3b82f6 100%);
        --gradient-card: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
        --glass-bg: rgba(255, 255, 255, 0.1);
        --glass-border: rgba(255, 255, 255, 0.15);
    }

    /* Reset et base */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        min-height: 100vh;
        background: var(--gradient-bg);
        background-size: 200% 200%;
        animation: gradientMove 10s ease infinite;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    @keyframes gradientMove {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    /* Carte principale */
    .password-reset-card {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 40px;
        width: 100%;
        max-width: 450px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    /* En-tête */
    .reset-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .reset-icon {
        width: 70px;
        height: 70px;
        background: var(--gradient-bg);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        box-shadow: 0 10px 20px rgba(30, 64, 175, 0.3);
    }

    .reset-icon svg {
        width: 32px;
        height: 32px;
        color: white;
    }

    .reset-title {
        color: white;
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .reset-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 16px;
        line-height: 1.5;
    }

    /* Formulaire */
    .reset-form {
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        color: white;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-input {
        width: 100%;
        padding: 15px 20px;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        color: white;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--light-blue);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
    }

    .form-input::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    /* Bouton */
    .submit-btn {
        width: 100%;
        padding: 16px;
        background: var(--gradient-bg);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(30, 64, 175, 0.4);
    }

    .submit-btn:active {
        transform: translateY(0);
    }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    /* Informations */
    .reset-info {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        border-left: 4px solid var(--light-blue);
    }

    .info-title {
        color: white;
        font-weight: 600;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-title svg {
        width: 20px;
        height: 20px;
    }

    .info-list {
        list-style: none;
    }

    .info-item {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 8px;
        font-size: 14px;
        line-height: 1.5;
        position: relative;
        padding-left: 20px;
    }

    .info-item:before {
        content: "•";
        color: var(--light-blue);
        font-size: 20px;
        position: absolute;
        left: 0;
        top: -2px;
    }

    /* Lien retour */
    .back-link {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-weight: 500;
        padding: 12px 20px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: white;
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(-5px);
    }

    .back-link svg {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .back-link:hover svg {
        transform: translateX(-3px);
    }

    /* Messages d'erreur */
    .error-message {
        color: #fecaca;
        background: rgba(220, 38, 38, 0.2);
        padding: 12px 16px;
        border-radius: 8px;
        margin-top: 10px;
        font-size: 14px;
        border-left: 3px solid #ef4444;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .password-reset-card {
            padding: 30px 25px;
            max-width: 95%;
        }

        .reset-title {
            font-size: 24px;
        }

        .reset-icon {
            width: 60px;
            height: 60px;
        }

        .reset-icon svg {
            width: 28px;
            height: 28px;
        }
    }

    @media (max-width: 480px) {
        body {
            padding: 15px;
        }

        .password-reset-card {
            padding: 25px 20px;
        }

        .reset-title {
            font-size: 22px;
        }

        .reset-subtitle {
            font-size: 15px;
        }

        .form-input {
            padding: 14px 16px;
        }

        .submit-btn {
            padding: 14px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="password-reset-card">
    <div class="reset-header">
        <div class="reset-icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
        </div>
        <h1 class="reset-title">Réinitialisation du mot de passe</h1>
        <p class="reset-subtitle">
            Entrez votre adresse email pour recevoir un lien de réinitialisation
        </p>
    </div>

    {{ form_start(requestForm) }}
        <div class="reset-form">
            <div class="form-group">
                <label class="form-label">Adresse email</label>
                {{ form_widget(requestForm.email, {
                    'attr': {
                        'class': 'form-input',
                        'placeholder': 'votre.email@exemple.com'
                    }
                }) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <button type="submit" class="submit-btn">
                Envoyer le lien de réinitialisation
                <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
            </button>
        </div>
    {{ form_end(requestForm) }}

    <div class="reset-info">
        <div class="info-title">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Informations importantes
        </div>
        <ul class="info-list">
            <li class="info-item">Le lien expire dans 1 heure</li>
            <li class="info-item">Vérifiez vos spams si vous ne recevez pas l'email</li>
            <li class="info-item">Ne partagez jamais ce lien avec quelqu'un d'autre</li>
        </ul>
    </div>

    <div class="text-center">
        <a href="{{ path('app_login') }}" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Retour à la connexion
        </a>
    </div>
</div>
{% endblock %}