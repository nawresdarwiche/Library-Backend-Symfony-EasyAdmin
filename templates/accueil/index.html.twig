<!-- Scripts -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Animation au scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('fade-in');
                }
            });
        }, observerOptions);

        // Observer les cartes
        document.querySelectorAll('.book-card, .stat-card, .page-header').forEach(card => {
            observer.observe(card);
        });

        // Recherche en temps réel
        const searchInput = document.querySelector('.search-input');
        const bookCards = document.querySelectorAll('.book-card');
        
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            
            bookCards.forEach(card => {
                const title = card.querySelector('.book-title').textContent.toLowerCase();
                const author = card.querySelector('.book-meta-item:nth-child(1) span')?.textContent?.toLowerCase() || '';
                const description = card.querySelector('.book-description')?.textContent?.toLowerCase() || '';
                
                if (title.includes(searchTerm) || author.includes(searchTerm) || description.includes(searchTerm)) {
                    card.style.display = 'flex';
                } else {
                    card.style.display = 'none';
                }
            });
            
            // Mettre à jour le compteur
            const visibleCards = document.querySelectorAll('.book-card[style="display: flex;"]').length;
            const totalCards = bookCards.length;
            document.querySelector('.stats-badge').textContent = `${visibleCards} livres trouvés`;
        });

        // Filtrage par catégorie et éditeur
        const categorySelect = document.querySelector('.filter-select:nth-of-type(1)');
        const editorSelect = document.querySelector('.filter-select:nth-of-type(2)');
        
        function applyFilters() {
            const categoryValue = categorySelect.value;
            const editorValue = editorSelect.value;
            
            bookCards.forEach(card => {
                const cardCategory = card.querySelector('.book-badge.category')?.textContent.toLowerCase() || '';
                const cardEditor = card.querySelector('.book-meta-item:nth-child(2) span')?.textContent?.toLowerCase() || '';
                
                let showCard = true;
                
                if (categoryValue && !cardCategory.includes(categoryValue.toLowerCase())) {
                    showCard = false;
                }
                
                if (editorValue && !cardEditor.includes(editorValue.toLowerCase())) {
                    showCard = false;
                }
                
                card.style.display = showCard ? 'flex' : 'none';
            });
            
            // Mettre à jour le compteur
            const visibleCards = document.querySelectorAll('.book-card[style="display: flex;"]').length;
            document.querySelector('.stats-badge').textContent = `${visibleCards} livres trouvés`;
        }
        
        categorySelect.addEventListener('change', applyFilters);
        editorSelect.addEventListener('change', applyFilters);

        // Favoris
        document.querySelectorAll('.btn-favorite').forEach(btn => {
            btn.addEventListener('click', function() {
                const icon = this.querySelector('i');
                if (icon.classList.contains('bi-heart')) {
                    icon.classList.remove('bi-heart');
                    icon.classList.add('bi-heart-fill');
                    this.style.background = '#fee2e2';
                    this.style.color = '#dc2626';
                    this.style.borderColor = '#fca5a5';
                } else {
                    icon.classList.remove('bi-heart-fill');
                    icon.classList.add('bi-heart');
                    this.style.background = 'white';
                    this.style.color = 'var(--text-light)';
                    this.style.borderColor = 'var(--border-color)';
                }
            });
        });

        // Animation des cartes
        bookCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(-8px)';
            });
        });
    });
</script>
