<!-- Main Content -->
<main class="main-content">
    <!-- Page Header -->
    
    <!-- Quick Stats -->
    <div class="quick-stats fade-in">
        <div class="stat-card">
            <i class="bi bi-book"></i>
            <div class="stat-number">{{ livres|length }}</div>
            <div class="stat-label">Livres total</div>
        </div>
        
        {% set uniqueCategories = [] %}
        {% for livre in livres %}
            {% if livre.categorie and livre.categorie.designation not in uniqueCategories %}
                {% set uniqueCategories = uniqueCategories|merge([livre.categorie.designation]) %}
            {% endif %}
        {% endfor %}
        
        <div class="stat-card">
            <i class="bi bi-tags"></i>
            <div class="stat-number">{{ uniqueCategories|length }}</div>
            <div class="stat-label">Catégories</div>
        </div>
        
        {% set uniqueEditeurs = [] %}
        {% for livre in livres %}
            {% if livre.editeur and livre.editeur.nomEditeur not in uniqueEditeurs %}
                {% set uniqueEditeurs = uniqueEditeurs|merge([livre.editeur.nomEditeur]) %}
            {% endif %}
        {% endfor %}
        
        <div class="stat-card">
            <i class="bi bi-buildings"></i>
            <div class="stat-number">{{ uniqueEditeurs|length }}</div>
            <div class="stat-label">Éditeurs</div>
        </div>
        
        {% set uniqueAuteurs = [] %}
        {% for livre in livres %}
            
        {% endfor %}
        
        <div class="stat-card">
            <i class="bi bi-people"></i>
            <div class="stat-number">{{ uniqueAuteurs|length }}</div>
            <div class="stat-label">Auteurs</div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section fade-in">
        <div class="search-box">
            <i class="bi bi-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Rechercher un livre par titre, auteur ou description...">
        </div>
        
        <select class="filter-select">
            <option value="">Toutes les catégories</option>
            {% for categorie in categories %}
                <option value="{{ categorie.id }}">{{ categorie.designation }}</option>
            {% endfor %}
        </select>
        
        <select class="filter-select">
            <option value="">Tous les éditeurs</option>
            {% for editeur in editeurs %}
                <option value="{{ editeur.id }}">{{ editeur.nomEditeur }}</option>
            {% endfor %}
        </select>
        
        <div class="stats-badge">
            {{ livres|length }} livres trouvés
        </div>
    </div>

    <!-- Books Grid -->
    <div class="books-grid">
        {% for livre in livres %}
            <div class="book-card fade-in">
                <div class="book-image">
                    {% if livre.image %}
                        <img src="{{ asset('uploads/livres/' ~ livre.image) }}" 
                             alt="{{ livre.titre }}">
                    {% else %}
                        <i class="bi bi-book" style="font-size: 4rem; color: var(--primary-blue);"></i>
                    {% endif %}
                    
                    <div class="book-badges">
                        {% if livre.categorie %}
                            <span class="book-badge category">{{ livre.categorie.designation }}</span>
                        {% endif %}
                        {% if loop.index <= 3 %}
                            <span class="book-badge new">Nouveau</span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="book-content">
                    <h3 class="book-title">{{ livre.titre }}</h3>
                    
                    <div class="book-meta">
                      
                        
                        
                        
                        {% if livre.isbn %}
                            <div class="book-meta-item">
                                <i class="bi bi-upc"></i>
                                <span>ISBN: {{ livre.isbn }}</span>
                            </div>
                        {% endif %}
                    </div>
                    
                    
                        <p class="book-description">
                            Un livre passionnant à découvrir. Plongez dans cette lecture captivante.
                        </p>
                    
                    <div class="book-footer">
                        <div class="book-price">
                            {{ random(10, 50) }}€
                        </div>
                        
                        <div class="book-actions">
                            <button class="btn-favorite">
                                <i class="bi bi-heart"></i>
                            </button>
                            <a href="{{ path('admin_livre_detail', {entityId: livre.id}) }}" 
                               class="btn-details">
                                <i class="bi bi-eye"></i> Détails
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="empty-state fade-in">
                <i class="bi bi-book"></i>
                <h3>Aucun livre disponible</h3>
                <p>Commencez par ajouter des livres à votre bibliothèque</p>
                <a href="{{ path('admin_livre_new') }}" class="btn-details" style="display: inline-block; margin-top: 1rem;">
                    <i class="bi bi-plus-circle"></i> Ajouter un livre
                </a>
            </div>
        {% endfor %}
    </div>

    <!-- Pagination -->
    {% if livres|length > 12 %}
        <div class="pagination fade-in">
            <a href="#" class="page-link disabled">
                <i class="bi bi-chevron-left"></i>
            </a>
            
            <a href="#" class="page-link active">1</a>
            <a href="#" class="page-link">2</a>
            <a href="#" class="page-link">3</a>
            <a href="#" class="page-link">4</a>
            <a href="#" class="page-link">5</a>
            
            <span style="padding: 0.8rem; color: var(--text-light);">...</span>
            
            <a href="#" class="page-link">10</a>
            
            <a href="#" class="page-link">
                <i class="bi bi-chevron-right"></i>
            </a>
        </div>
    {% endif %}
