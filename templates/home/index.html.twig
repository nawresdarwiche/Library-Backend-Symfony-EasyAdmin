{% extends 'base.html.twig' %}

{% block title %}MyLibrary - Votre biblioth√®que num√©rique d'excellence{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        :root {
            --primary: #6366F1;
            --primary-dark: #4F46E5;
            --primary-light: #818CF8;
            --secondary: #EC4899;
            --secondary-dark: #DB2777;
            --accent: #10B981;
            --accent-light: #34D399;
            --dark: #1E293B;
            --darker: #0F172A;
            --light: #F8FAFC;
            --lighter: #FFFFFF;
            --gray: #94A3B8;
            --gray-light: #E2E8F0;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.05);
            --shadow-md: 0 8px 30px rgba(0,0,0,0.12);
            --shadow-lg: 0 20px 60px rgba(0,0,0,0.2);
            --shadow-xl: 0 25px 50px rgba(0,0,0,0.25);
            --transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            --transition-slow: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
            --transition-fast: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background-color: var(--light);
            color: var(--dark);
            overflow-x: hidden;
            background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
        }

        /* === PARTICLES BACKGROUND === */
        .particles-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .particle {
            position: absolute;
            background: linear-gradient(135deg, var(--primary-light), var(--secondary));
            border-radius: 50%;
            opacity: 0.1;
        }

        /* === NAVIGATION === */
        .navbar-glass {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(20px) saturate(180%);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1rem 0;
            transition: var(--transition);
            z-index: 1000;
            transform: translateY(0);
        }

        .navbar-glass.hidden {
            transform: translateY(-100%);
        }

        .navbar-glass.scrolled {
            background: rgba(255, 255, 255, 0.95);
            box-shadow: var(--shadow-md);
            padding: 0.5rem 0;
        }

        .brand-icon {
            filter: drop-shadow(0 4px 6px rgba(99, 102, 241, 0.3));
            transition: var(--transition);
        }

        .brand-icon:hover {
            transform: rotate(15deg) scale(1.1);
        }

        .brand-text {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 1.8rem;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            position: relative;
            overflow: hidden;
        }

        .brand-text::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: -100%;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--primary), transparent);
            transition: var(--transition);
        }

        .brand-text:hover::after {
            left: 100%;
        }

        .nav-icon {
            color: var(--dark);
            font-size: 1.1rem;
            position: relative;
            transition: var(--transition);
            padding: 0.5rem;
            border-radius: 50%;
        }

        .nav-icon:hover {
            color: var(--primary);
            transform: translateY(-3px) scale(1.1);
            background: rgba(99, 102, 241, 0.1);
        }

        .notification-badge {
            position: absolute;
            top: 0;
            right: 0;
            background: linear-gradient(135deg, var(--secondary), var(--primary));
            color: var(--lighter);
            font-size: 0.7rem;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            animation: pulse 2s infinite;
            box-shadow: 0 0 10px rgba(236, 72, 153, 0.5);
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .avatar-wrapper {
            position: relative;
            display: inline-block;
        }

        .avatar-initials {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: var(--lighter);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1rem;
            transition: var(--transition);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        .avatar-initials:hover {
            transform: rotate(360deg) scale(1.1);
        }

        .avatar-status {
            position: absolute;
            bottom: 2px;
            right: 2px;
            width: 12px;
            height: 12px;
            background: var(--accent);
            border: 2px solid var(--lighter);
            border-radius: 50%;
            animation: statusPulse 2s infinite;
        }

        @keyframes statusPulse {
            0%, 100% { 
                transform: scale(1);
                box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
            }
            50% { 
                transform: scale(1.2);
                box-shadow: 0 0 0 4px rgba(16, 185, 129, 0);
            }
        }

        /* === HERO SECTION === */
        .hero-section {
            position: relative;
            min-height: 100vh;
            background: linear-gradient(135deg, var(--darker) 0%, var(--dark) 100%);
            overflow: hidden;
            padding-top: 80px;
            display: flex;
            align-items: center;
        }

        .hero-bg-animation {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .floating-element {
            position: absolute;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(99, 102, 241, 0.1) 0%, rgba(99, 102, 241, 0) 70%);
            animation: float 20s infinite linear;
        }

        @keyframes float {
            0% { transform: translate(0, 0) rotate(0deg); }
            25% { transform: translate(100px, 100px) rotate(90deg); }
            50% { transform: translate(0, 200px) rotate(180deg); }
            75% { transform: translate(-100px, 100px) rotate(270deg); }
            100% { transform: translate(0, 0) rotate(360deg); }
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-badge {
            display: inline-block;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.05));
            backdrop-filter: blur(10px);
            padding: 0.8rem 2rem;
            border-radius: 50px;
            color: var(--lighter);
            font-weight: 500;
            font-size: 0.9rem;
            letter-spacing: 2px;
            margin-bottom: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: slideInLeft 1s ease-out;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            line-height: 1.1;
            color: var(--lighter);
            margin-bottom: 1.5rem;
            animation: slideInUp 1s ease-out 0.3s both;
            text-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero-title .typing-text {
            display: inline-block;
            background: linear-gradient(135deg, var(--primary-light), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            position: relative;
        }

        .hero-title .typing-text::after {
            content: '';
            position: absolute;
            right: -8px;
            top: 0;
            height: 100%;
            width: 3px;
            background: var(--secondary);
            animation: blink 1s infinite;
        }

        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0; }
        }

        .hero-subtitle {
            font-size: 1.3rem;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
            max-width: 600px;
            margin-bottom: 3rem;
            animation: fadeIn 1.5s ease-out 0.6s both;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .search-wrapper {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 1rem;
            display: flex;
            align-items: center;
            box-shadow: var(--shadow-xl);
            max-width: 700px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: scaleIn 1s ease-out 0.9s both;
            transition: var(--transition);
        }

        .search-wrapper:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 70px rgba(0, 0, 0, 0.4);
        }

        @keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .search-icon {
            color: var(--lighter);
            margin: 0 1.5rem;
            font-size: 1.3rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-5px); }
        }

        .search-input {
            flex: 1;
            border: none;
            outline: none;
            font-size: 1.2rem;
            padding: 0.5rem 0;
            background: transparent;
            color: var(--lighter);
        }

        .search-input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .search-button {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: var(--lighter);
            border: none;
            padding: 1rem 2.5rem;
            border-radius: 15px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            position: relative;
            overflow: hidden;
        }

        .search-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: var(--transition);
        }

        .search-button:hover::before {
            left: 100%;
        }

        .search-button:hover {
            transform: translateX(10px) scale(1.05);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.4);
        }

        .hero-visual {
            position: relative;
            height: 500px;
            animation: floatUpDown 6s ease-in-out infinite;
        }

        @keyframes floatUpDown {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-30px); }
        }

        .floating-book-3d {
            position: absolute;
            width: 180px;
            height: 250px;
            transform-style: preserve-3d;
            transition: var(--transition);
            cursor: pointer;
        }

        .floating-book-3d:hover {
            transform: rotateY(180deg) scale(1.1);
        }

        .book-front, .book-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 10px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 2rem;
        }

        .book-front {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: var(--lighter);
            transform: rotateY(0deg);
        }

        .book-back {
            background: linear-gradient(135deg, var(--secondary), var(--secondary-dark));
            color: var(--lighter);
            transform: rotateY(180deg);
            text-align: center;
        }

        /* === FEATURED BOOKS === */
        .featured-section {
            padding: 8rem 0;
            background: var(--lighter);
            position: relative;
            overflow: hidden;
        }

        .section-title {
            font-size: 3rem;
            font-weight: 800;
            color: var(--dark);
            margin-bottom: 1rem;
            text-align: center;
            position: relative;
            display: inline-block;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border-radius: 2px;
            animation: widthGrow 2s ease-out;
        }

        @keyframes widthGrow {
            from { width: 0; }
            to { width: 100px; }
        }

        .section-subtitle {
            color: var(--gray);
            text-align: center;
            margin-bottom: 4rem;
            font-size: 1.2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .modern-book-card {
            background: var(--lighter);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
            height: 100%;
            border: 1px solid var(--gray-light);
            position: relative;
            opacity: 0;
            transform: translateY(50px);
            animation: cardAppear 0.8s ease-out forwards;
        }

        @keyframes cardAppear {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modern-book-card:nth-child(1) { animation-delay: 0.1s; }
        .modern-book-card:nth-child(2) { animation-delay: 0.2s; }
        .modern-book-card:nth-child(3) { animation-delay: 0.3s; }
        .modern-book-card:nth-child(4) { animation-delay: 0.4s; }
        .modern-book-card:nth-child(5) { animation-delay: 0.5s; }
        .modern-book-card:nth-child(6) { animation-delay: 0.6s; }
        .modern-book-card:nth-child(7) { animation-delay: 0.7s; }
        .modern-book-card:nth-child(8) { animation-delay: 0.8s; }

        .modern-book-card:hover {
            transform: translateY(-15px) rotateX(5deg);
            box-shadow: var(--shadow-xl);
            border-color: transparent;
        }

        .book-cover-wrapper {
            position: relative;
            height: 320px;
            overflow: hidden;
        }

        .book-cover-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition-slow);
        }

        .modern-book-card:hover .book-cover-img {
            transform: scale(1.2) rotate(2deg);
        }

        .book-cover-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .book-cover-placeholder::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                45deg,
                transparent 30%,
                rgba(255, 255, 255, 0.1) 50%,
                transparent 70%
            );
            animation: shimmer 3s infinite linear;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%) rotate(45deg); }
            100% { transform: translateX(100%) rotate(45deg); }
        }

        .book-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(99, 102, 241, 0.9), rgba(236, 72, 153, 0.9));
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: var(--transition);
        }

        .modern-book-card:hover .book-overlay {
            opacity: 1;
        }

        .book-actions {
            display: flex;
            gap: 1rem;
            transform: translateY(20px);
            transition: var(--transition);
        }

        .modern-book-card:hover .book-actions {
            transform: translateY(0);
        }

        .btn-action {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--lighter);
            border: none;
            color: var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
            cursor: pointer;
            position: relative;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-action::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            opacity: 0;
            transition: var(--transition);
            border-radius: 50%;
        }

        .btn-action:hover::before {
            opacity: 1;
        }

        .btn-action:hover {
            transform: translateY(-5px) scale(1.1);
            color: var(--lighter);
        }

        .btn-action i {
            position: relative;
            z-index: 1;
        }

        .book-info {
            padding: 2rem;
            background: var(--lighter);
        }

        .book-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 0.8rem;
            line-height: 1.4;
            transition: var(--transition);
        }

        .modern-book-card:hover .book-title {
            color: var(--primary);
        }

        .book-authors {
            color: var(--gray);
            font-size: 0.95rem;
            margin-bottom: 1.2rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .book-authors::before {
            content: 'üë§';
            font-size: 0.9rem;
        }

        .category-badge {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: var(--lighter);
            padding: 0.4rem 1.2rem;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
            transition: var(--transition);
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        }

        .category-badge:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(99, 102, 241, 0.4);
        }

        .book-rating {
            display: flex;
            align-items: center;
            color: #FBBF24;
            font-weight: 600;
            gap: 0.3rem;
        }

        .book-rating i {
            animation: starPulse 1.5s infinite;
        }

        @keyframes starPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }

        /* === STATISTICS === */
        .stats-section {
            padding: 8rem 0;
            background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
            position: relative;
            overflow: hidden;
        }

        .stat-card {
            background: var(--lighter);
            border-radius: 20px;
            padding: 3rem 2rem;
            text-align: center;
            transition: var(--transition);
            border: 1px solid var(--gray-light);
            box-shadow: var(--shadow-sm);
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            transform: translateX(-100%);
            transition: var(--transition);
        }

        .stat-card:hover::before {
            transform: translateX(0);
        }

        .stat-card:hover {
            transform: translateY(-10px) scale(1.05);
            box-shadow: var(--shadow-xl);
            border-color: transparent;
        }

        .stat-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            color: var(--lighter);
            font-size: 2rem;
            transition: var(--transition);
            animation: rotate 20s infinite linear;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .stat-card:hover .stat-icon {
            animation: bounceSpin 1s ease;
        }

        @keyframes bounceSpin {
            0% { transform: scale(1) rotate(0deg); }
            50% { transform: scale(1.2) rotate(180deg); }
            100% { transform: scale(1) rotate(360deg); }
        }

        .stat-number {
            font-size: 3.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
            animation: countUp 2s ease-out;
        }

        @keyframes countUp {
            from { 
                opacity: 0;
                transform: translateY(20px);
            }
            to { 
                opacity: 1;
                transform: translateY(0);
            }
        }

        .stat-label {
            color: var(--gray);
            font-size: 1.1rem;
            font-weight: 500;
            letter-spacing: 1px;
        }

        /* === CATEGORIES === */
        .categories-section {
            padding: 8rem 0;
            background: var(--lighter);
        }

        .category-card {
            background: var(--lighter);
            border-radius: 20px;
            padding: 2rem;
            display: flex;
            align-items: center;
            gap: 1.5rem;
            transition: var(--transition);
            border: 1px solid var(--gray-light);
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

        .category-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            opacity: 0;
            transition: var(--transition);
            z-index: 1;
        }

        .category-card:hover::before {
            opacity: 1;
        }

        .category-card:hover {
            transform: translateY(-10px) rotate(2deg);
            border-color: transparent;
            color: var(--lighter);
            text-decoration: none;
            box-shadow: var(--shadow-xl);
        }

        .category-icon {
            width: 70px;
            height: 70px;
